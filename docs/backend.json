{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      }
    },
    "UserPronostico": {
      "title": "User Pronostico",
      "description": "A user's prediction for a football match.",
      "type": "object",
      "properties": {
        "matchId": {
          "type": "string",
          "description": "The ID of the match."
        },
        "prediction": {
          "type": "string",
          "description": "The user's prediction (e.g., 'team1_wins', 'draw', 'team2_wins')."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the prediction was made."
        }
      },
      "required": ["matchId", "prediction", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com", "facebook.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/pronosticos/{pronosticoId}": {
      "schema": {
        "$ref": "#/entities/UserPronostico"
      },
      "description": "Stores predictions made by a specific user."
    }
  }
}
